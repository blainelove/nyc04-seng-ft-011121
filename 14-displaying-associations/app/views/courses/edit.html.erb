<h1>Editing <%= @course.name %></h1>

<%= form_for @course do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :classroom_number %>
    <%= f.number_field :classroom_number %>

    <%= f.label :seat_limit %>
    <%= f.number_field :seat_limit %>

    <%= f.submit %>

<% end %>