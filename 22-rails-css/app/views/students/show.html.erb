<h1>Show </h1>

<p>Name: <%= @student.name %> </p>
<p>Age: <%= @student.age %> </p>
<p> <%= @student.display_nicely %> </p>

<%= link_to "See All Students", students_path %>
<%= link_to "Edit #{@student.name}", edit_student_path(@student) %>


<% if current_student.id == @student.id %>

    <%= button_to "Delete Student", "/students/#{@student.id}", method: "delete" %>
    <%= button_to "Increase Age", "/students/#{@student.id}/increase", method: "patch" %>

<% end %>



<h2>Report Card</h2>
<ul>
    <% @student.grades.each do |grade_inst| %>
        <li>
            <%= link_to grade_inst.course.name, course_path(grade_inst.course) %>  
                - 
            <%= grade_inst.grade_value %>
            <%= button_to "X", "/grades/#{grade_inst.id}" ,method: "delete" %>
        </li>
    <% end %>
</ul>