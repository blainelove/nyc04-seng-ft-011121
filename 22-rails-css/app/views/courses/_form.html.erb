<%= render "/shared/errors" %>

<%= form_for @course, html: {class: "course_form"} do |f| %>

    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :classroom_number %>
    <%= f.number_field :classroom_number %>

    <%= f.label :seat_limit %>
    <%= f.number_field :seat_limit %>

    <%= f.submit %>

<% end %>
